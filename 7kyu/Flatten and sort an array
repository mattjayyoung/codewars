// Flatten and sort an array - 7kyu (Apr 23rd)

//P - array of arrays with integers
//R - flattened array with elements in order


"use strict";

function flattenAndSort(array) {
  return array.flat().sort((a, b) => a - b)
}


// E

flattenAndSort([[3, 2, 1], [7, 9, 8], [6, 4, 5]]) // [1, 2, 3, 4, 5, 6, 7, 8, 9]
flattenAndSort([[1, 3, 5], [100], [2, 4, 6]]) // [1, 2, 3, 4, 5, 6, 100]

//P

/*

Flatten the array with array.flat()
Sort in order with the sort method

*/